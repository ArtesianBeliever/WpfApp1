        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <Menu>
            <MenuItem x:Name="Group" Header="Преподаватель" Click="Group_OnClick"></MenuItem>
            <MenuItem x:Name="Spec" Header="Должность" Click="Spec_OnClick"></MenuItem>
            <MenuItem x:Name="Qual" Header="Факультет" Click="Qual_OnClick"></MenuItem>
            <MenuItem x:Name="Form" Header="Кафедра" Click="Form_OnClick"></MenuItem>
        </Menu>
    </Grid>
</Window>
